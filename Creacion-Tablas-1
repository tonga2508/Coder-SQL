create schema codertp;
use codertp;
CREATE TABLE SeiyuuOriginal (
  SeiyuuOrig_id int (10) auto_increment primary key,
  Nombre varchar (100) not null,
  Personaje varchar (100) not null
);
CREATE TABLE Origen  (
  Origen_id int (10) auto_increment primary key,
  Campo varchar (100) not null
);
CREATE TABLE Sinopsis (
  Sinopsis_id int (10) auto_increment primary key,
  Contenido varchar (255) not null 
);
CREATE TABLE Status  (
  Status_id int (10) auto_increment primary key,
  Estado varchar (50) not null
);
CREATE TABLE Publicacion  (
  Pub_id int (10) auto_increment primary key,
  Campo varchar  (50) not null
);
CREATE TABLE Generos (
  Generos_id int (10) auto_increment primary key,
  Genero_tipo varchar (50) not null
);
CREATE TABLE Airing (
  Aire_id int (10) auto_increment primary key,
  Status boolean  not null
);

CREATE TABLE ProducidoX (
  Producer_id int auto_increment primary key,
  Nombre_Productora varchar (50) not null
);

CREATE TABLE Studio (
  Studio_id int auto_increment primary key,
  Nombre_Studio varchar (50) not null
);

CREATE TABLE Rating (
  Rating_id int (10) auto_increment primary key,
  Calificacion varchar (100) not null
);

CREATE TABLE LicenciadoX (
  Licencia_id int auto_increment primary key,
  Licenciatario  varchar (50) not null
);

CREATE TABLE Animes (
  Titulo varchar (100) not null,
  Episodios bigint not null,
  Start_Date date not null,
  End_Date date not null,
  ranking int  not null,
  Duracion varchar (100) not null,
  Score int  not null,
  Producer_id int,
  Studio_id int,
  Pub_id int,
  Rating_id int,
  Generos_id int,
  Aire_id int,
  Sinopsis_id int,
  Origen_id int,
  Status_id int,
  SeiyuuOrig_id int,
  Licencia_id int,
  Anime_id int auto_increment primary key,
  FOREIGN KEY (Producer_id) REFERENCES producidox(Producer_id),
  FOREIGN KEY (Studio_id) REFERENCES studio(Studio_id),
  FOREIGN KEY (Pub_id) REFERENCES publicacion(Pub_id),
  FOREIGN KEY (Rating_id) REFERENCES rating(Rating_id),
  FOREIGN KEY (Generos_id) REFERENCES generos(Generos_id),
  FOREIGN KEY (Aire_id) REFERENCES airing(Aire_id),
  FOREIGN KEY (Sinopsis_id) REFERENCES sinopsis(Sinopsis_id),
  FOREIGN KEY (Origen_id) REFERENCES origen(Origen_id),
  FOREIGN KEY (Status_id) REFERENCES status(Status_id),
  FOREIGN KEY (SeiyuuOrig_id) REFERENCES seiyuuOriginal(SeiyuuOrig_id),
  FOREIGN KEY (Licencia_id) REFERENCES licenciadox(Licencia_id));
